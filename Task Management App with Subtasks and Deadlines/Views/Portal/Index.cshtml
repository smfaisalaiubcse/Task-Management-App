@model IEnumerable<Task_Management_App_with_Subtasks_and_Deadlines.DTOs.TaskDTO>

@{
    ViewBag.Title = "Index";
    var userRole = Session["Role"] as string;
    if (userRole == "User")
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
    else if (userRole == "Admin")
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}


<h2>Task Feed</h2>

﻿@if (TempData["Msg"] != null)
{
    <span class="alert alert-info">@TempData["Msg"] </span>
}
<p>
    @Html.ActionLink("Create Your Task", "createTask")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatorsId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeadLine)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatorsId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeadLine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
        </tr>
    }

</table>
